@using MudarT.Extensions;
@{
    int usuarioId = Context.Session.GetObject<int>("Usuario");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MudarT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MudarT.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/images/MudaT-Icon-sinfondo.ico" />
